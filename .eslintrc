{
  "parserOptions": {"ecmaVersion": "latest"},
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "brace-style":["error", "1tbs"],
    "comma-dangle":"error",
    "semi":"error",
    "indent": ["error",2],
    "quotes": ["error","single"],
    "no-trailing-spaces":"error",
    "eol-last":"error",
    "space-before-blocks": "error",
    "no-multiple-empty-lines":["error", { 
      "max": 0,
       "maxEOF": 0 }],
      "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "always",
        "asyncArrow": "always"
    }]
  }
}